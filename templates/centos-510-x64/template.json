{
  "variables": {
    "name": "centos-510-x64",
    "memory": "512",
    "vcpus": "1",
    "username": "root",
    "password": "root",
    "iso_url": "http://mirrors.kernel.org/centos/5.10/isos/x86_64/CentOS-5.10-x86_64-netinstall.iso",
    "iso_checksum": "e09e44f04f0a4b97b04935e0ba88833f",
    "shutdown_command": "shutdown -h now"
  },
  "builders": [
    {
      "type": "virtualbox",
      "headless": true,
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",
      "iso_url": "{{user `iso_url`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo '{{user `password`}}'|sudo -S sh 'shutdown.sh'",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "{{user `vcpus`}}" ],
        [ "modifyvm", "{{.Name}}", "--pae", "on" ],
        [ "modifyvm", "{{.Name}}", "--ioapic", "on" ]
      ],
      "vm_name": "packer-virtualbox-{{user `name`}}"
    },
    {
      "type": "vmware",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "guest_os_type": "rhel6-64",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",
      "iso_url": "{{user `iso_url`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo '{{user `password`}}'|sudo -S sh 'shutdown.sh'",
      "vmx_data": {
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `vcpus`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": ["scripts/base.sh", "scripts/vagrant.sh"]
    },
    {
      "type": "shell",
      "only": ["virtualbox"],
      "scripts": ["scripts/virtualbox.sh"]
    },
    {
      "type": "shell",
      "scripts": ["scripts/cleanup.sh", "scripts/zerodisk.sh"]
    }
  ],
  "post-processors": ["vagrant"]
}
