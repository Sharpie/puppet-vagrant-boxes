{
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/settings.sh",
        "scripts/base.sh",
        "scripts/kernel.sh",
        "scripts/usb.sh",
        "scripts/git.sh",
        "scripts/subversion.sh",
        "scripts/virtualbox.sh",
        "scripts/vagrant.sh",
        "scripts/ruby.sh",
        "scripts/add_chef.sh",
        "scripts/add_puppet.sh",
        "scripts/add_vim.sh",
        "scripts/cron.sh",
        "scripts/syslog.sh",
        "scripts/nfs.sh",
        "scripts/grub.sh",
        "scripts/wipe_sources.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh",
        "scripts/reboot.sh"
      ],
      "override": {
        "virtualbox": {
          "execute_command": "cat '{{.Path}}'|su -"
        },
        "vmware": {
          "execute_command": "cat '{{.Path}}'|su -"
        }
      }
    }
  ],
  "builders": [
    {
      "type": "virtualbox",
      "headless": true,
      "boot_command": [
        "<wait><wait><wait>",
        "gentoo-nofb<enter><wait>",
        "<wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait>",
        "<enter><wait>",
        "<wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait>",
        "passwd<enter><wait><wait><wait>",
        "vagrant<enter><wait><wait>",
        "vagrant<enter><wait><wait>",
        "/etc/init.d/sshd start<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 20280,
      "guest_os_type": "Gentoo_64",
      "iso_url": "http://distfiles.gentoo.org/releases/amd64/autobuilds/20131010/install-amd64-minimal-20131010.iso",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -hP now' > shutdown.sh; cat 'shutdown.sh'|su -",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          2
        ]
      ]
    },
    {
      "type": "vmware",
      "boot_command": [
        "<wait><wait><wait>",
        "gentoo-nofb<enter><wait>",
        "<wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait>",
        "<enter><wait>",
        "<wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><wait>",
        "passwd<enter><wait><wait><wait>",
        "vagrant<enter><wait><wait>",
        "vagrant<enter><wait><wait>",
        "/etc/init.d/sshd start<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 20280,
      "guest_os_type": "other26xlinux-64",
      "iso_url": "http://distfiles.gentoo.org/releases/amd64/autobuilds/20131010/install-amd64-minimal-20131010.iso",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -hP now' > shutdown.sh; cat 'shutdown.sh'|su -",
      "vmx_data": {
        "memsize": "1024",
        "numvcpus": 2,
        "cpuid.coresPerSocket": "1"
      }
    }
  ]
}
