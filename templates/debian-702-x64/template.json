{
  "variables": {
    "name": "debian-702-x64",
    "memory": "512",
    "vcpus": "1",
    "username": "root",
    "password": "root",
    "iso_checksum": "b86774fe4de88be6378ba3d71b8029bd",
    "iso_url": "http://cdimage.debian.org/debian-cd/7.2.0/amd64/iso-cd/debian-7.2.0-amd64-netinst.iso",
    "shutdown_command": "shutdown -h now"
  },
  "builders": [
    {
      "type": "virtualbox",
      "headless": true,
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "<enter><wait>"
      ],
      "guest_os_type": "Debian_64",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",
      "iso_url": "{{user `iso_url`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "{{user `vcpus`}}" ]
      ],
      "vm_name": "packer-virtualbox-{{user `name`}}"
    },
    {
      "type": "vmware",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "<enter><wait>"
      ],
      "guest_os_type": "debian5-64",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",
      "iso_url": "{{user `iso_url`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "vmx_data": {
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `vcpus`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": ["scripts/base.sh", "scripts/vagrant.sh"]
    },
    {
      "type": "shell",
      "only": ["virtualbox"],
      "scripts": ["scripts/virtualbox.sh"]
    },
    {
      "type": "shell",
      "scripts": ["scripts/cleanup.sh", "scripts/zerodisk.sh"]
    }
  ],
  "post-processors": ["vagrant"]
}
