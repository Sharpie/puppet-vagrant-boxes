{
  "variables": {
    "name": "ubuntu-srv-1310-x64",
    "memory": "512",
    "vcpus": "1",
    "username": "root",
    "password": "root",
    "iso_checksum": "4d1a8b720cdd14b76ed9410c63a00d0e",
    "iso_url": "http://releases.ubuntu.com/13.10/ubuntu-13.10-server-amd64.iso",
    "shutdown_command": "shutdown -h now"
  },
  "builders": [
    {
      "type": "virtualbox",
      "headless": true,
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",
        "hostname={{ .Name }} <wait>",
        "fb=false debconf/frontend=noninteractive <wait>",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=us keyboard-configuration/variant=us console-setup/ask_detect=false <wait>",
        "initrd=/install/initrd.gz -- <enter><wait>"
      ],
      "guest_os_type": "Ubuntu_64",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",
      "iso_url": "{{user `iso_url`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "{{user `vcpus`}}" ]
      ],
      "vm_name": "packer-virtualbox-{{user `name`}}"
    },
    {
      "type": "vmware",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",
        "hostname={{ .Name }} <wait>",
        "fb=false debconf/frontend=noninteractive <wait>",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=us keyboard-configuration/variant=us console-setup/ask_detect=false <wait>",
        "initrd=/install/initrd.gz -- <enter><wait>"
      ],
      "guest_os_type": "ubuntu-64",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",
      "iso_url": "{{user `iso_url`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "tools_upload_flavour": "linux",
      "vmx_data": {
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `vcpus`}}"
      },
      "vm_name": "packer-vmware-{{user `name`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": ["scripts/base.sh", "scripts/vagrant.sh"]
    },
    {
      "type": "shell",
      "only": ["virtualbox"],
      "scripts": ["scripts/virtualbox.sh"]
    },
    {
      "type": "shell",
      "only": ["vmware"],
      "scripts": ["scripts/vmfusion.sh"]
    },
    {
      "type": "shell",
      "scripts": ["scripts/cleanup.sh", "scripts/zerodisk.sh"]
    }
  ],
  "post-processors": ["vagrant"]
}
