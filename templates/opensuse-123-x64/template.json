{
  "variables": {
    "name": "opensuse-123-x64",
    "memory": "512",
    "vcpus": "1",
    "username": "root",
    "password": "root",
    "iso_checksum": "0ef3c2f301b05f52e9c98cff3f799744",
    "iso_url": "http://download.opensuse.org/distribution/12.3/iso/openSUSE-12.3-NET-x86_64.iso",
    "shutdown_command": "shutdown -h now"
  },
  "builders": [
    {
      "type": "virtualbox",
      "headless": true,
      "boot_command": [
        "<esc><enter><wait>",
        "linux netdevice=eth0 netsetup=dhcp<wait>",
        " install=http://download.opensuse.org/distribution/12.3/repo/oss/ insecure=1<wait>",
        " lang=en_US autoyast=http://{{ .HTTPIP }}:{{ .HTTPPort }}/autoinst.xml<wait>",
        " textmode=1<wait>",
        "<enter><wait>"
      ],
      "guest_os_type": "OpenSUSE_64",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",
      "iso_url": "{{user `iso_url`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "{{user `vcpus`}}" ]
      ],
      "vm_name": "packer-virtualbox-{{user `name`}}"
    },
    {
      "type": "vmware",
      "boot_command": [
        "<esc><enter><wait>",
        "linux netdevice=eth0 netsetup=dhcp<wait>",
        " install=http://download.opensuse.org/distribution/12.3/repo/oss/ insecure=1<wait>",
        " lang=en_US autoyast=http://{{ .HTTPIP }}:{{ .HTTPPort }}/autoinst.xml<wait>",
        " textmode=1<wait>",
        "<enter><wait>"
      ],
      "guest_os_type": "opensuse-64",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",
      "iso_url": "{{user `iso_url`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "tools_upload_flavour": "linux",
      "vmx_data": {
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `vcpus`}}"
      },
      "vm_name": "packer-vmware-{{user `name`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": ["scripts/base.sh", "scripts/vagrant.sh"]
    },
    {
      "type": "shell",
      "only": ["virtualbox"],
      "scripts": ["scripts/virtualbox.sh"]
    },
    {
      "type": "shell",
      "only": ["vmware"],
      "scripts": ["scripts/vmfusion.sh"]
    },
    {
      "type": "shell",
      "scripts": ["scripts/cleanup.sh", "scripts/zerodisk.sh"]
    }
  ],
  "post-processors": ["vagrant"]
}
